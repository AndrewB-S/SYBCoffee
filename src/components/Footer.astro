---
import coffeeGif from "../assets/images/coffee.gif";
import { navItems } from "../consts";
import logoDogImage from "../assets/images/willsCartoonDog.png";
const SYB = logoDogImage.src;
---

<footer class="bg-royal flex flex-col py-2 pl-2 items-stretch">
  <div class="flex justify-between">
    <div class="inline-flex items-center">
      <img src={coffeeGif.src} alt="" class="max-h-4" />
      <a class="btn btn-ghost normal-case text-l font-bold text-orangered px-2">
        SYB <img src={SYB} alt="" class="w-6 -ml-2 -mr-2 inline-block" /> Coffee</a
      >
    </div>
    <nav class="inline-block">
      <ul class="flex h-full pr-0.5">
        {
          navItems.map((el) => (
            <li class="flex flex-col justify-center text-slate px-1">
              <a class="text-[0.6rem]">{el}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
  <small class="text-center">Â©2023 Andrew Sneed</small>
</footer>
