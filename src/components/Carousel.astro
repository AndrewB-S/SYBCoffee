---
const images = await Astro.glob("../assets/images/*").then((images) => {
  return images.map((img) => img.default);
});

const marqueeContainerStyles = {};
const marqueeContentStyles = {};
---

<style>
  .marquee {
    position: relative;
    display: flex;
    overflow: scroll;
    user-select: none;
  }

  .marquee__content {
    flex-shrink: 0;
    display: flex;
    justify-content: space-around;
    min-width: 100%;
  }

  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }

  /* Enable animation */
  .marquee__content {
    animation: scroll 700s linear infinite;
  }
</style>

<div class="marquee z-0">
  <ul class="marquee__content">
    {
      images.map((img) => {
        return <img alt="" src={img.src} />;
      })
    }
  </ul>

