---
import { Image } from "astro:assets";
//@ts-ignore
import heroBackground from "../assets/images/coffee-art.avif";
const { SYB } = Astro.props;
---

<section
  id="Home"
  class="hero min-h-[300px] mx-auto bg-center scroll-m-16"
  style=`background-image: url(${heroBackground})`
>
  <div class="hero-overlay"></div>
  <div class="hero-content text-center text-neutral-focus flex flex-col py-20 gap-8">
    <div
      id="logo-button"
      class="relative border-4 border-orangered rounded-md flex flex-col items-center"
    >
      <div
        id="logo-background"
        class="absolute bg-royal opacity-75 h-full w-full"
      >
      </div>
      <h1
        class="text-orangered drop-shadow-2xl text-4xl [@media(min-width:404px)]:text-5xl font-bold tracking-wide rounded-lg select-none p-4"
      >
        SYB <Image
          src={SYB}
          alt=""
          class="w-16 -mt-4 -mr-2 inline-block"
        /> Coffee
      </h1>
    </div>
    <p class="text-2xl text-offwhite tracking-widest max-w-md font-serif drop-shadow-2xl leading-normal">
      Premium, freshly-made coffee for events of all kinds.
    </p>
  </div>
</section>
